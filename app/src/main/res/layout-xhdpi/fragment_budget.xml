<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvWalletList"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/img_wallet"
            android:drawableTint="@color/Greencolor"
            android:fontFamily="@font/poppins"
            android:paddingEnd="30dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:text="Your Budget List"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBgWallet" />

        <ImageView
            android:id="@+id/imgBgTitle1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="-5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/custom_bg_transaction_green" />

        <TextView
            android:id="@+id/tvBalanceDesc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="Total Budget"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalWealth" />

        <TextView
            android:id="@+id/tvTotalWealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="RM 0.00"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBgTitle1" />

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="Your Budget"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgBgTitle1" />

        <ImageView
            android:id="@+id/imgBgWallet"
            android:layout_width="357dp"
            android:layout_height="189dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBalanceDesc3"
            app:srcCompat="@drawable/custom_bg_light_grey" />

        <ImageView
            android:id="@+id/imgCreateWallet"
            android:layout_width="105dp"
            android:layout_height="115dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/imgBgWallet"
            app:layout_constraintTop_toTopOf="@+id/imgBgWallet"
            app:srcCompat="@drawable/create_new_wallet" />

        <ImageView
            android:id="@+id/imgEditWallet"
            android:layout_width="136dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="@+id/imgBgWallet"
            app:layout_constraintTop_toTopOf="@+id/imgBgWallet"
            app:srcCompat="@drawable/img_edit_wallet" />

        <TextView
            android:id="@+id/tvCreateNewWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="150dp"
            android:fontFamily="@font/poppins"
            android:text="Create New Budget"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imgBgWallet"
            app:layout_constraintStart_toStartOf="@+id/imgBgWallet"
            app:layout_constraintTop_toBottomOf="@+id/imgCreateWallet" />

        <TextView
            android:id="@+id/tvEditMyWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="175dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="Edit My Budget"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imgBgWallet"
            app:layout_constraintStart_toStartOf="@+id/imgBgWallet"
            app:layout_constraintTop_toBottomOf="@+id/imgEditWallet" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/walletRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@drawable/custom_bg_transaction_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWalletList" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>