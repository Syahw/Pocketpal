<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#00FF00"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="125dp"
        android:layout_height="36dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tvWlc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMain">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="2sp"
            android:buttonTint="@color/Greencolor"
            android:checked="false"
            android:minWidth="0dp" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="2sp"
            android:buttonTint="@color/Greencolor"
            android:minWidth="0dp" />


        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="2sp"
            android:buttonTint="@color/Greencolor"
            android:minWidth="0dp" />
    </RadioGroup>


    <ImageView
        android:id="@+id/imgBgBottom7"
        android:layout_width="459dp"
        android:layout_height="283dp"
        android:layout_marginStart="-110dp"
        android:layout_marginBottom="-170dp"
        android:rotation="-160"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/_removal_ai__tmp_64a2d1067e48c" />

    <ImageView
        android:id="@+id/imgBgTop7"
        android:layout_width="451dp"
        android:layout_height="254dp"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-120dp"
        android:rotation="-45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_removal_ai__tmp_64a2d1067e48c" />

    <ImageView
        android:id="@+id/imgBgTop"
        android:layout_width="451dp"
        android:layout_height="254dp"
        android:layout_marginTop="-160dp"
        android:layout_marginEnd="-90dp"
        android:rotation="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_removal_ai__tmp_64a2d1067e48c" />

    <ImageView
        android:id="@+id/imgBgBottom"
        android:layout_width="403dp"
        android:layout_height="276dp"
        android:layout_marginEnd="-200dp"
        android:layout_marginBottom="-100dp"
        android:rotation="125"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/_removal_ai__tmp_64a2d1067e48c" />


    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="49dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pocketpal_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

    <TextView
        android:id="@+id/tvTermsAndCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="By Signing In, You Agree To PocketPal \nTerms And Condition , Privacy's Policy"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp" />

    <TextView
        android:id="@+id/tvWlc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Welcome To PocketPal!"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMain" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="Let's Get Started By Clicking The \n Sign Up / Sign In Down Below :-"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWlc" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/poppins"
        android:foregroundTint="#000000"
        android:text="SIGN IN"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDesc" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/poppins"
        android:foregroundTint="#000000"
        android:text="SIGN UP"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn" />

    <ImageView
        android:id="@+id/imgMain"
        android:layout_width="407dp"
        android:layout_height="185dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOnTheGo"
        app:srcCompat="@drawable/img1" />

    <TextView
        android:id="@+id/tvOnTheGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="Manage Your Money On-The-Go With PocketPal"
        android:textColor="#040404"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPocketPal" />

    <TextView
        android:id="@+id/tvPocketPal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/baloo"
        android:foregroundTint="#FFFFFF"
        android:text="POCKETPAL"
        android:textColor="@color/Greencolor"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>