<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbox"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Wallets_Page">

        <Button
            android:id="@+id/btnCategory3"
            android:layout_width="32dp"
            android:layout_height="38dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/gray"
            android:text="Button"
            app:iconSize="25dp"
            app:layout_constraintEnd_toStartOf="@+id/etWalletCategory"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/tvDeleteWallet"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_input"
            android:backgroundTint="@color/Redcolor"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Delete Selected Budget"
            android:textColor="#FDFDFD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditWallet2" />

        <EditText
            android:id="@+id/etWalletCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:drawableStart="@drawable/img_arrow_left"
            android:drawableTint="@color/gray"
            android:fontFamily="@font/poppins"
            android:hint="Choose A Budget"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterWalletCategory" />

        <TextView
            android:id="@+id/tvEnterWalletCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/poppins"

            android:text="Budget Category :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etWalletName" />

        <TextView
            android:id="@+id/tvEnterWalletBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:text="Enter Budget Balance :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etWalletCategory" />

        <ImageView
            android:id="@+id/imgBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_line" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_close" />

        <TextView
            android:id="@+id/tvEditWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppins"
            android:text="Edit Existing Budget"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etWalletName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/poppins"
            android:hint="Choose A Budget"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterWalletName" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:layout_marginTop="205dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/etWalletName"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_wallet" />

        <Spinner
            android:id="@+id/spinWalletList"
            android:layout_width="301dp"
            android:layout_height="41dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_spinner"
            android:drawableStart="@drawable/img_wallet"
            android:drawableEnd="@drawable/img_arrow_down"
            android:drawablePadding="12dp"
            android:drawableTint="@color/Greencolor"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditWallet" />


        <EditText
            android:id="@+id/etWalletBalance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/poppins"
            android:hint="Choose A Budget"
            android:inputType="number|numberDecimal"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etWalletCategory" />

        <ImageView
            android:id="@+id/imgBalance"
            android:layout_width="38dp"
            android:layout_height="32dp"
            android:layout_marginTop="47dp"
            app:layout_constraintEnd_toStartOf="@+id/etWalletBalance"
            app:layout_constraintTop_toBottomOf="@+id/btnCategory3"
            app:srcCompat="@drawable/img_balance" />

        <TextView
            android:id="@+id/tvEnterWalletName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/poppins"
            android:text="Enter Budget Name :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinWalletList" />

        <TextView
            android:id="@+id/tvEditWallet2"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_input"
            android:backgroundTint="@color/Greencolor"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Edit Budget"
            android:textColor="#FDFDFD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etWalletCategory" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>