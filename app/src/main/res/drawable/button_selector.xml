<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/Greencolor" /> <!-- Color when button is pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/Greencolor" /> <!-- Color when button is inactive -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/Greencolor" /> <!-- Default color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>

